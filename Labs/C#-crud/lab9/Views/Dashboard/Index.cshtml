
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center">
    <div class="row">
        <a asp-area="" asp-controller="Recipe" asp-action="Add" type="button" class="btn btn-primary mb-2 col-12">Add Recipe</a>
        <a asp-area="" asp-controller="Recipe" asp-action="Delete" type="button" class="btn btn-secondary mb-2 col-12">Delete Recipe</a>
        <a asp-area="" asp-controller="Recipe" asp-action="Update" type="button" class="btn btn-success mb-2 col-12">Update Recipes</a>
        <a asp-area="" asp-controller="Recipe" asp-action="Browse" type="button" class="btn btn-warning mb-2 col-12">Browse Recipes</a>
    </div>

    <div class="row">
        <a asp-area="" asp-controller="Account" asp-action="Logout" type="button" class="btn btn-danger mb-2 col-12 mt-10">Logout</a>
    </div>
</div>

